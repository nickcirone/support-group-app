<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %> 
</head>
<body>
<% include partials/navbar %>
    <div class="container">
        <h2>Matches for <%= user.username %></h2>
        <br/>
        <h3>Matches:</h3>

        <% for (var j = 0; j < matchProfiles.length; j++) { %>
            <div class="card" style="width: 15rem;">
                <div class="card-body text-center">
                    <h3 class="card-header">
                            <%= matches[j].username %> <br/>
                            <%= matches[j].length %> <br/>
                    </h3>
                    <div class="card-text">
                        <h4 >Age: <%= matchProfiles[j].age %> </h4>
                        <h4> Interest: <%= matchProfiles[j].interests %> </h4>
                        <h4> Services: <%= matchProfiles[j].services %> </h4>
                    </div>
                    <a class= "btn-sm btn-primary btn-block">Match!</a>
                </div>
            </div>
        <% } %>

        <h3>
                Pending: <br/>
                <% if (received) { %>
                    <h3 class="text-success">
                        <% for (var i = 0; i < received.length; i++) { %>
                            <%= received[i].username %><br/>
                        <% } %>
                    </h3>
                <% } %>
                <% if (sent) { %>
                    <h3 class="text-danger">
                        <% for (var i = 0; i < sent.length; i++) { %>
                            <%= sent[i].username %><br/>
                        <% } %>
                    </h3>
                <% } %>
        </h3>
    </div>

</body>
<% include partials/script %>
</html>
